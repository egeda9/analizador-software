@page
@model IndexModel
@{
    ViewData["Title"] = "Analizador de Especificaciones de Software";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            border-radius: 12px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            padding: 40px;
        }
        
        h1 {
            color: #667eea;
            margin-bottom: 30px;
            font-size: 2em;
            text-align: center;
        }
        
        .form-section {
            margin-bottom: 40px;
            padding: 30px;
            background: #f8f9fa;
            border-radius: 8px;
        }
        
        label {
            display: block;
            font-weight: 600;
            color: #333;
            margin-bottom: 10px;
            font-size: 1.1em;
        }
        
        textarea {
            width: 100%;
            min-height: 200px;
            padding: 15px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 16px;
            font-family: inherit;
            resize: vertical;
            transition: border-color 0.3s;
        }
        
        textarea:focus {
            outline: none;
            border-color: #667eea;
        }
        
        button {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 15px 40px;
            font-size: 18px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: transform 0.2s, box-shadow 0.2s;
            margin-top: 20px;
        }
        
        button:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.4);
        }
        
        button:active {
            transform: translateY(0);
        }
        
        .mensaje {
            padding: 15px 20px;
            border-radius: 8px;
            margin: 20px 0;
            font-weight: 500;
        }
        
        .mensaje.exito {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        
        .mensaje.error {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        
        .resultados {
            margin-top: 40px;
        }
        
        .proceso {
            background: #fff;
            border: 2px solid #667eea;
            border-radius: 8px;
            padding: 25px;
            margin-bottom: 30px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .proceso h2 {
            color: #667eea;
            margin-bottom: 10px;
            font-size: 1.5em;
        }
        
        .proceso-desc {
            color: #666;
            margin-bottom: 20px;
            line-height: 1.6;
        }
        
        .subproceso {
            background: #f8f9fa;
            border-left: 4px solid #764ba2;
            padding: 20px;
            margin: 20px 0;
            border-radius: 4px;
        }
        
        .subproceso h3 {
            color: #764ba2;
            margin-bottom: 8px;
            font-size: 1.2em;
        }
        
        .subproceso-desc {
            color: #666;
            margin-bottom: 15px;
            font-size: 0.95em;
        }
        
        .caso-uso {
            background: white;
            border: 1px solid #ddd;
            padding: 15px;
            margin: 15px 0;
            border-radius: 4px;
        }
        
        .caso-uso h4 {
            color: #333;
            margin-bottom: 10px;
            font-size: 1em;
        }
        
        .caso-detail {
            font-size: 0.9em;
            color: #666;
            margin: 5px 0;
        }
        
        .caso-detail strong {
            color: #333;
        }
        
        .tipo-badge {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 0.85em;
            font-weight: 600;
            margin-left: 10px;
        }
        
        .tipo-1 { background: #d4edda; color: #155724; }
        .tipo-2 { background: #fff3cd; color: #856404; }
        .tipo-3 { background: #d1ecf1; color: #0c5460; }
        
        .historial-titulo {
            color: #333;
            margin-top: 50px;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 3px solid #667eea;
            font-size: 1.5em;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>ðŸš€ Analizador de Especificaciones de Software</h1>
        
        <div class="form-section">
            <form method="post">
                <label for="especificacion">
                    Describe la especificaciÃ³n del software que necesitas:
                </label>
                <textarea 
                    id="especificacion" 
                    name="especificacion" 
                    placeholder="Ejemplo: Necesito un sistema de gestiÃ³n de inventario que permita registrar productos, controlar stock, generar alertas de bajo inventario y generar reportes de movimientos..."
                    required>@Model.Especificacion</textarea>
                
                <button type="submit">âœ¨ Analizar con IA</button>
            </form>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.Mensaje))
        {
            <div class="mensaje @(Model.Mensaje.StartsWith("âœ“") ? "exito" : "error")">
                @Model.Mensaje
            </div>
        }
        
        @if (Model.MostrarResultados && Model.Procesos.Any())
        {
            <div class="resultados">
                <h2 style="color: #667eea; margin-bottom: 20px;">ðŸ“‹ Resultado del AnÃ¡lisis</h2>
                
                @foreach (var proceso in Model.Procesos)
                {
                    <div class="proceso">
                        <h2>@proceso.Nombre</h2>
                        @if (!string.IsNullOrEmpty(proceso.Descripcion))
                        {
                            <p class="proceso-desc">@proceso.Descripcion</p>
                        }
                        
                        @foreach (var subproceso in proceso.Subprocesos)
                        {
                            <div class="subproceso">
                                <h3>@subproceso.Nombre</h3>
                                @if (!string.IsNullOrEmpty(subproceso.Descripcion))
                                {
                                    <p class="subproceso-desc">@subproceso.Descripcion</p>
                                }
                                
                                @foreach (var casoUso in subproceso.CasosUso)
                                {
                                    <div class="caso-uso">
                                        <h4>
                                            ðŸ“Œ @casoUso.Nombre
                                            @if (casoUso.TipoCasoUso.HasValue)
                                            {
                                                <span class="tipo-badge tipo-@casoUso.TipoCasoUso">
                                                    @(casoUso.TipoCasoUso == 1 ? "Funcional" : 
                                                      casoUso.TipoCasoUso == 2 ? "No Funcional" : "Sistema")
                                                </span>
                                            }
                                        </h4>
                                        
                                        @if (!string.IsNullOrEmpty(casoUso.Descripcion))
                                        {
                                            <p class="caso-detail"><strong>DescripciÃ³n:</strong> @casoUso.Descripcion</p>
                                        }
                                        @if (!string.IsNullOrEmpty(casoUso.ActorPrincipal))
                                        {
                                            <p class="caso-detail"><strong>Actor:</strong> @casoUso.ActorPrincipal</p>
                                        }
                                        @if (!string.IsNullOrEmpty(casoUso.Precondiciones))
                                        {
                                            <p class="caso-detail"><strong>Precondiciones:</strong> @casoUso.Precondiciones</p>
                                        }
                                        @if (!string.IsNullOrEmpty(casoUso.Postcondiciones))
                                        {
                                            <p class="caso-detail"><strong>Postcondiciones:</strong> @casoUso.Postcondiciones</p>
                                        }
                                        @if (!string.IsNullOrEmpty(casoUso.CriteriosDeAceptacion))
                                        {
                                            <p class="caso-detail"><strong>Criterios:</strong> @casoUso.CriteriosDeAceptacion</p>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        }
        
        @if (!Model.MostrarResultados && Model.Procesos.Any())
        {
            <h2 class="historial-titulo">ðŸ“š Historial de AnÃ¡lisis (Ãšltimos 10)</h2>
            
            @foreach (var proceso in Model.Procesos)
            {
                <div class="proceso">
                    <h2>@proceso.Nombre</h2>
                    @if (!string.IsNullOrEmpty(proceso.Descripcion))
                    {
                        <p class="proceso-desc">@proceso.Descripcion</p>
                    }
                    
                    @foreach (var subproceso in proceso.Subprocesos)
                    {
                        <div class="subproceso">
                            <h3>@subproceso.Nombre</h3>
                            @if (!string.IsNullOrEmpty(subproceso.Descripcion))
                            {
                                <p class="subproceso-desc">@subproceso.Descripcion</p>
                            }
                            
                            <p style="color: #999; font-size: 0.9em;">
                                @subproceso.CasosUso.Count caso(s) de uso
                            </p>
                        </div>
                    }
                </div>
            }
        }
    </div>
</body>
</html>
